// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Basics
  "auto_update": false,
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "use_system_path_prompts": false,
  // Vim mode
  "cursor_blink": false,
  "vim_mode": true,
  // Fonts
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 300,
  "buffer_line_height": {
    "custom": 1.433
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  "indent_guides": {
    "coloring": "fixed"
  },
  // Languages
  "auto_install_extensions": {
    "angular": true,
    "ansible": true,
    "clojure": true,
    "dockerfile": true,
    "docker-compose": true,
    "groovy": true,
    "helm": true,
    "html": true,
    "make": true,
    "php": true,
    "pylsp": true,
    "sql": true,
    "terraform": true
  },
  // User interface
  "agent": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "diagnostics": {
    "button": false,
    "include_warnings": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "button": false
  },
  "gutter": {
    "min_line_number_digits": 1,
    "folds": false,
    "breakpoints": false,
    "runnables": false,
    "line_numbers": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 350,
    "button": false
  },
  "search": {
    "button": false
  },
  "terminal": {
    "default_height": 800,
    "font_size": 14,
    "font_family": "JetBrains Mono",
    "font_weight": 300,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    },
    "button": false
  },
  "title_bar": {
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_icon": false,
    "show_menus": false
  },
  // Color theme
  "theme": "Alabaster",
  "experimental.theme_overrides": {
    "editor.active_line.background": "#fff9df",
    "editor.background": "#c0c0c0",
    "editor.gutter.background": "#c0c0c0",
    "editor.highlighted_line.background": "#f0f0f0",
    "terminal.background": "#c0c0c0",
    "syntax": {
      "boolean": {
        "color": "#000080",
        "font_weight": 600
      },
      "comment": {
        "color": "#808080",
        "font_style": "italic",
        "font_weight": 400
      },
      "constant": {
        "color": "#871094",
        "font_weight": 400
      },
      "element.selected": {
        "color": "#000000"
      },
      "function": {
        "color": "#141414",
        "font_weight": 400
      },
      "keyword": {
        "color": "#000080",
        "font_weight": 600
      },
      "number": {
        "color": "#0000ff",
        "font_weight": 400
      },
      "punctuation": {
        "color": "#303030",
        "font_weight": 400
      },
      "punctuation.delimeter.variable": {
        "color": "#ffa500"
      },
      "string": {
        "color": "#008000",
        "font_weight": 600
      },
      "variable": {
        "color": "#660000",
        "font_weight": 400
      },
      "variable.parameter": {
        "color": "#660000",
        "font_weight": 600
      }
    }
  }
}
