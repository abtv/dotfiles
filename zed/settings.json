// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Basics
  "auto_update": false,
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "use_system_path_prompts": false,
  // Vim mode
  "cursor_blink": false,
  "vim_mode": true,
  // Fonts
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 15,
  "buffer_font_weight": 300,
  "buffer_line_height": {
    "custom": 1.433
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  "indent_guides": {
    "coloring": "fixed"
  },
  // Languages
  "auto_install_extensions": {
    "angular": true,
    "ansible": true,
    "clojure": true,
    "dockerfile": true,
    "docker-compose": true,
    "groovy": true,
    "helm": true,
    "html": true,
    "make": true,
    "php": true,
    "pylsp": true,
    "sql": true,
    "terraform": true
  },
  // User interface
  "agent": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "diagnostics": {
    "button": false,
    "include_warnings": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "button": false
  },
  "gutter": {
    "min_line_number_digits": 1,
    "folds": false,
    "breakpoints": false,
    "runnables": false,
    "line_numbers": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 350,
    "button": false
  },
  "search": {
    "button": false
  },
  "terminal": {
    "default_height": 800,
    "font_size": 15,
    "font_family": "JetBrains Mono",
    "font_weight": 300,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    },
    "button": false
  },
  "title_bar": {
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_icon": false,
    "show_menus": false
  },
  // Color theme
  "experimental.theme_overrides": {
    "editor.background": "#ebebec",
    "terminal.background": "#ebebec"
  }
}
