{
  "title": "Caps Lock (Ctrl) + HJKL",
  "rules": [
    { "description": "Caps Lock to Ctrl",
      "manipulators": [{"type": "basic", "from": {"key_code": "caps_lock", "modifiers": {"optional": ["any"]}}, "to": [{"key_code": "left_control"}]}] },
    { "description": "Ctrl + H/J/K/L to Arrow Keys",
      "manipulators": [{"type": "basic", "from": {"key_code": "h", "modifiers": {"mandatory": ["left_option"], "optional": ["any"]}}, "to": [{"key_code": "left_arrow"}]},
                       {"type": "basic", "from": {"key_code": "j", "modifiers": {"mandatory": ["left_option"], "optional": ["any"]}}, "to": [{"key_code": "down_arrow"}]},
                       {"type": "basic", "from": {"key_code": "k", "modifiers": {"mandatory": ["left_option"], "optional": ["any"]}}, "to": [{"key_code": "up_arrow"}] },
                       {"type": "basic", "from": {"key_code": "l", "modifiers": {"mandatory": ["left_option"], "optional": ["any"]}}, "to": [{"key_code": "right_arrow"}]}] }
  ]
}
